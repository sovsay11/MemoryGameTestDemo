    <!--Main layout-->
    <VerticalStackLayout Background="White">

        <!--Title and player selection-->
        <Frame BackgroundColor="White">
            <VerticalStackLayout>
                <Label TextColor="Black"
                       FontSize="Title"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       Margin="10"
                       Text="Gotta Match 'Em All!" />
                <Label FontSize="Body"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       Text="Please select number of players:" />
                <HorizontalStackLayout HorizontalOptions="Center">
                    <RadioButton x:Name="RadioButtonOnePlayer"
                                 HorizontalOptions="Start"
                                 TextColor="Black"
                                 IsChecked="True"
                                 Content="1 Player" />
                    <RadioButton x:Name="RadioButtonTwoPlayers"
                                 TextColor="Black"
                                 HorizontalOptions="End"
                                 Content="2 Players" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!--This keeps track of the number of turns-->
        <Frame BackgroundColor="White">
            <HorizontalStackLayout>
                <Label Text="Number of Turns:"
                       TextColor="Black" />
                <Label x:Name="LabelNumberOfTurns"
                       TextColor="Black"
                       Margin="10, 0, 0, 0" />
            </HorizontalStackLayout>
        </Frame>

        <!--Create the main grid for all the cards-->
        <Grid x:Name="GridCards"
              HorizontalOptions="Center"
              HeightRequest="390"
              WidthRequest="390"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--#region Card Section-->
            <!--Card 1, remember to generate the click event for this first-->
            <Frame Grid.Row="0"
                   Grid.Column="0"
                   Padding="0"
                   BorderColor="Black">
                <ImageButton x:Name="Card1"
                             ClassId="1"
                             Margin="1"
                             BackgroundColor="White"
                             CornerRadius="10"
                             Clicked="CardButton_Clicked" />
            </Frame>

            <!--Card 2-->
            <Frame Grid.Row="0"
                   Grid.Column="1"
                   Padding="0"
                   BorderColor="Black">
                <ImageButton x:Name="Card2"
                             ClassId="2"
                             Margin="1"
                             BackgroundColor="White"
                             CornerRadius="10"
                             Clicked="CardButton_Clicked" />
            </Frame>

            <!--Card 3-->
            <Frame Grid.Row="0"
                   Grid.Column="2"
                   Padding="0"
                   BorderColor="Black">
                <ImageButton x:Name="Card3"
                             ClassId="3"
                             Margin="1"
                             BackgroundColor="White"
                             CornerRadius="10"
